{
  "compilerOptions": {
    "module": "commonJS",
    "moduleResolution": "node",
    "pretty": true,
    "sourceMap": false,
    "target": "es2017",
    "lib": [
      "esnext",
      "dom"
    ],
    "strict": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "declaration": true,
    "declarationDir": "./dist/types",
    "resolveJsonModule": true,
    "skipLibCheck": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": [
    "*.ts",
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
